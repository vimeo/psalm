{
    "name": "vimeo/psalm",
    "description": "A static analysis tool for finding errors in PHP applications",
    "keywords": ["php", "code", "inspection"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Brown"
        }
    ],
    "config": {
        "platform": {
            "php": "5.4"
        },
        "platform-dev": {
            "php": "5.6"
        }
    },
    "require": {
        "php": "^5.4 || ^7.0",
        "nikic/PHP-Parser": "^2.1.1",
        "composer/composer": "^1.3",
        "symfony/console": "^2.7",
        "symfony/yaml": "^2.8"
    },
    "bin": ["bin/psalm"],
    "autoload": {
        "psr-4": {
            "Psalm\\": "src/Psalm"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Psalm\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "php": "^5.6 || ^7.0",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "scripts": {
        "psalm": "./bin/psalm --self-check",
        "standards": "phpcs --standard=phpcs.xml",
        "tests": "phpunit tests/"
    }
}
